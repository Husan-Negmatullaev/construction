<!DOCTYPE html>
<html lang="en">

<head>
	<title>HomePage</title>
	<meta charset="UTF-8">
	<meta name="format-detection" content="telephone=no">
	<!-- 	<meta http-equiv="X-UA-Compatible" content="IE=edge"> -->
	<link rel="stylesheet" href="./css/style.css">
	<!-- <link rel="shortcut icon" href="favicon.ico"> -->
	<!-- <meta name="robots" content="noindex, nofollow"> -->
	<!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
</head>

<body>
    <div class="wrapper">
        <!-- @import "header.kit" -->
		<div class="header-bottom header-bottom__mainblock">
            <div class="header-bottom__container container">
                <h1 class="mainblock__title">
                    GET IN TOUCH WITH US.
                </h1>
                <div class="mainblock__subtitle">
                    Contact The Construction Company
                </div>
            </div>
			<div class="header-bottom__image ibg">
                <img src="./img/contact-us/01.jpg" alt="">
            </div>
            <div class="index__overlay"></div>
		</div>
        <main>
            <section class="breadcrumb">
                <div class="breadcrumb__container container">
                    <span class="breadcrumb__item">
                        <a href="" class="breadcrumb__link">Construction Theme Demo</a>
                    </span>
                    <span class="breadcrumb__item">
                        <a href="" class="breadcrumb__link">Our Services</a>
                    </span>
                    <span class="breadcrumb__item">
                        <span class="breadcrumb__title">Construction Consultant</span>
                    </span>
                </div>
            </section>
            <section class="contact-us">
                <div class="contact-us__container container">
                    <div class="contact-us__row">
                        <div class="contact-us__column">
                            <div class="contact-us__title section-title">
                                <h2 class="section-title__title">Contact Us</h2>
                                <span class="section-title__line"></span>
                            </div>
                            <p class="contact-us__text">
                                Call or submit our online form to request an estimate or for general questions about U.S. Certified Contractors and our services. We look forward to serving you!
                            </p>
                            <form action="" class="form-contact">
                                <div class="form-contact__body">
                                    <div class="form-contact__row">
                                        <div class="form-contact__column">
                                            <div class="form-contact__input">
    											<input type="text" placeholder="First Name *" autocomplete="off" name="form[]" data-value="" class="input req">
                                            </div>
                                        </div>
                                        <div class="form-contact__column">
                                            <div class="form-contact__input">
    											<input type="text" placeholder="Last Name *" autocomplete="off" name="form[]" data-value="" class="input req">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-contact__row">
                                        <div class="form-contact__column">
                                            <div class="form-contact__input">
    											<input type="text" placeholder="Your Email *" autocomplete="off" name="form[]" data-value="" class="input req email">
                                            </div>
                                        </div>
                                        <div class="form-contact__column">
                                            <div class="form-contact__input">
    											<input type="text" placeholder="Your Phone Number *" autocomplete="off" name="form[]" data-value="" class="input req">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-contact__input">
                                        <input type="text" placeholder="Subject" autocomplete="off" name="form[]" data-value="" class="input req">
                                    </div>
                                    <div class="form-contact__input">
                                        <textarea aria-invalid="false" cols="40" rows="10" placeholder="Message" class="input req"></textarea>
                                    </div>
                                    <button class="form-contact__btn" type="submit">Send Message</button>
                                </div>
                            </form>
                        </div>
                        <div class="contact-us__column map">
                            <div class="map__row">
                                <div class="map__column">
                                    <h4 class="map__title">
                                        MAILING ADDRESS
                                    </h4>
                                    <p class="map__text">
                                        1600 Amphitheatre Parkway
                                        Mountain View CA 94043
                                        United States
                                    </p>
                                </div>
                                <div class="map__column">
                                    <h4 class="map__title">
                                        CONTACT INFO
                                    </h4>
                                    <p class="map__text">
                                        +1 (312) 380-6650
                                        <br>
                                        <a href="#" class="map__link">contact@construction.com</a>
                                        <br>
                                        <a href="#" class="map__link">@construction_llc</a>
                                    </p>
                                </div>
                            </div>
                            <div class="google-maps">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2372.191530540092!2d49.30698741528919!3d53.518636169493895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x416879e0266e1f4d%3A0xc8a11ac723085210!2z0KDQtdGB0YLQvtGA0LDQvSDCq0dhY2hpIE11Y2hpwrs!5e0!3m2!1sru!2s!4v1635559032417!5m2!1sru!2s" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>
		<!-- @import "footer.kit" -->
		<a href="#mainblock" class="goto btn-top _icon-chevron-top-arrow"></a>
    </div>
	<!-- @import "js.kit" -->

</body>